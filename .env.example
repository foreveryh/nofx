# NOFX Environment Variables Template
# Copy this file to .env and modify the values as needed
# IMPORTANT: DO NOT commit .env to version control!

# Ports Configuration
# Backend API server port (internal: 8080, external: configurable)
NOFX_BACKEND_PORT=8080

# Frontend web interface port (Nginx listens on port 80 internally)
NOFX_FRONTEND_PORT=3000

# Timezone Setting
# System timezone for container time synchronization
NOFX_TIMEZONE=Asia/Shanghai

# Database Encryption Key (32 chars)
# Generate with: openssl rand -base64 32 | tr -d '=' | cut -c1-32
# IMPORTANT: Keep this secret and never commit it!
DATA_ENCRYPTION_KEY=your_32_char_encryption_key_here

# JWT Secret (for authentication)
# Generate with: openssl rand -base64 64
# IMPORTANT: Keep this secret and never commit it!
JWT_SECRET=your_jwt_secret_here

# AI Model Configuration (OpenRouter)
# Get API key from: https://openrouter.ai/keys
CUSTOM_AI_ENDPOINT=https://openrouter.ai/api/v1#
CUSTOM_AI_API_KEY=your_openrouter_api_key_here
CUSTOM_AI_MODEL=anthropic/claude-3.5-sonnet

# Binance API Configuration
# Get API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false
BINANCE_FUTURES=true

# Slack Notifications (optional)
# Get webhook from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
